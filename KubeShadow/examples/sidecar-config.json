{
    "image": "nginx:latest",
    "command": ["nginx"],
    "args": ["-g", "daemon off;"],
    "env": [
        {
            "name": "NGINX_PORT",
            "value": "80"
        }
    ],
    "volumeMounts": [
        {
            "name": "config-volume",
            "mountPath": "/etc/nginx/conf.d"
        }
    ],
    "securityContext": {
        "runAsNonRoot": true,
        "runAsUser": 101,
        "runAsGroup": 101,
        "allowPrivilegeEscalation": false,
        "capabilities": {
            "drop": ["ALL"]
        },
        "readOnlyRootFilesystem": true
    }
} 